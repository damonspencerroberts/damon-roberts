<div class="banner" style="background-image: linear-gradient(#50a37983,rgba(0,0,0,0.6)), url('<%= cl_image_path "https://res.cloudinary.com/dc1w9349i/image/upload/v1613923070/perso/tech_mpfr8o.jpg" %>');">
  <div class="container">
    <h1>MY WORK</h1>
    <p>Take a glance at some of the work I have done.</p>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-center align-items-center py-5">
    <h1>Portfolio</h1>
  </div>

  <div class="row">
    <% @projects.each_with_index do |project, index| %>
      <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= cl_image_path project.photos[0].key %>')">
          <%= project.name %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center align-items-center py-5">
    <h1>Certificates</h1>
  </div>

  <div class="row">
    <% @certificates.each_with_index do |certif, index| %>
      <div class="col-12">
        <a href="<%= certif.url %>">
          <div class="card-product">
            <%= cl_image_tag certif.photo.key %>
            <div class="card-product-infos">
              <h2><%= certif.name %></h2>
              <p>Completed through <%= certif.institution %></p>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>  
</div>